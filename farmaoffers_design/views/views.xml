        <menuitem id="menu_farma_offers" name="FarmaOffers"
        parent="website.menu_website_configuration"
        sequence="16"
        groups="base.group_user"/>

        <!-- Price Filter -->
        <record id="price_filter_form_view" model="ir.ui.view">
            <field name="name">price.filter.form</field>
            <field name="model">price.filter</field>
            <field name="arch" type="xml">
                <form string="Price filter" create="0" delete="0">
                    <sheet>
                        <group>
                            <group>
                                <field name="price_under" digits="[15,2]"/>
                                <field name="price_over" digits="[15,2]"/>
                                <field name="price_range" digits="[15,2]"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="price_filter_tree_view" model="ir.ui.view">
            <field name="name">price.filter.tree</field>
            <field name="model">price.filter</field>
            <field name="field_parent" eval="False"/>
            <field name="arch" type="xml">
                <tree string="Price filter" create="0" delete="0">
                    <field name="price_under" digits="[15,2]"/>
                    <field name="price_over" digits="[15,2]"/>
                    <field name="price_range" digits="[15,2]"/>
                </tree>
            </field>
        </record>

        <record id="menu_price_filter_action" model="ir.actions.act_window">
            <field name="name">Price filter</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">price.filter</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Click to add a price filter.
                </p><p>
                </p>
            </field>
        </record>

        <!-- Ribbons -->
        <record id="product_ribbon_form_view" model="ir.ui.view">
            <field name="name">product.ribbon.form</field>
            <field name="model">product.ribbon</field>
            <field name="arch" type="xml">
                <form string="Product ribbon">
                    <sheet>
                        <group>
                            <group>
                                <field name="html"/>
                                <field name="bg_color"/>
                                <field name="text_color"/>
                                <field name="html_class"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="product_ribbon_tree_view" model="ir.ui.view">
            <field name="name">product.ribbon.tree</field>
            <field name="model">product.ribbon</field>
            <field name="field_parent" eval="False"/>
            <field name="arch" type="xml">
                <tree string="Product ribbon">
                    <field name="html"/>
                </tree>
            </field>
        </record>

        <record id="menu_product_ribbon_action" model="ir.actions.act_window">
            <field name="name">Product ribbons</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">product.ribbon</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Click to add a ribbon.
                </p><p>
                </p>
            </field>
        </record>

        <!-- Offers -->
        <record id="product_offers_form_view" model="ir.ui.view">
            <field name="name">product.offers.form</field>
            <field name="model">product.offers</field>
            <field name="arch" type="xml">
                <form string="Product offers">
                    <sheet>
                        <group>
                            <group>
                                <field name="title"/>
                                <field name="description"/>
                                <field name="image" widget='image' class="oe_avatar"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="product_offers_tree_view" model="ir.ui.view">
            <field name="name">product.offers.tree</field>
            <field name="model">product.offers</field>
            <field name="field_parent" eval="False"/>
            <field name="arch" type="xml">
                <tree string="Product offers">
                    <field name="title"/>
                    <field name="description"/>
                </tree>
            </field>
        </record>

        <record id="menu_product_offers_action" model="ir.actions.act_window">
            <field name="name">Product offers</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">product.offers</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Click to add a offers.
                </p><p>
                </p>
            </field>
        </record>

        <!-- Aditional Information -->
        <record id="product_aditional_info_form_view" model="ir.ui.view">
            <field name="name">product.aditional.info.form</field>
            <field name="model">product.aditional.info</field>
            <field name="arch" type="xml">
                <form string="Aditional info">
                    <sheet>
                        <group>
                            <group>
                                <field name="description"/>
                                <field name="product_tmpl_id"/>
                                <field name="image" widget='image' class="oe_avatar"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="product_aditional_info_tree_view" model="ir.ui.view">
            <field name="name">product.aditional.info.tree</field>
            <field name="model">product.aditional.info</field>
            <field name="field_parent" eval="False"/>
            <field name="arch" type="xml">
                <tree string="Aditional information">
                    <field name="description"/>
                </tree>
            </field>
        </record>

        <!-- general Information -->
        <record id="product_general_info_form_view" model="ir.ui.view">
            <field name="name">product.general.info.form</field>
            <field name="model">product.general.info</field>
            <field name="arch" type="xml">
                <form string="General info">
                    <sheet>
                        <group>
                            <group>
                                <field name="title"/>
                                <field name="description"/>
                                <field name="type"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="product_general_info_tree_view" model="ir.ui.view">
            <field name="name">product.general.info.tree</field>
            <field name="model">product.general.info</field>
            <field name="field_parent" eval="False"/>
            <field name="arch" type="xml">
                <tree string="General information">
                    <field name="title"/>
                    <field name="type"/>
                </tree>
            </field>
        </record>

